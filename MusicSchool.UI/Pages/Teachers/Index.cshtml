@page
@model MusicSchool.UI.Pages.Teachers.IndexModel
@{
	ViewData["Title"] = "Profesores";
}

<h3 class="text-center">Lista de profesores</h3>

<div class="text-center" id="error" style="color: red;"></div>

<div class="d-flex justify-content-center">
    <div class="card w-100">
        <div class="card-body">
            <a href="/Teachers/Create" class="btn btn-primary">Crear profesor</a>
            <div class="table-responsive mt-3">
                <table class="table table-striped" id="generalTable">
                    <thead>
                        <tr>
                            <th>DNI</th>
                            <th>Profesor</th>
                            <th>Escuela</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Los profesores se insertan vía JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script asp-append-version="true" src="~/js/teachers/index.js" type="module"></script>
