@page
@model MusicSchool.UI.Pages.Students.IndexModel
@{
	ViewData["Title"] = "Estudiantes";
}

<h3 class="text-center">Lista de estudiantes</h3>

<div class="text-center" id="error" style="color: red;"></div>

<div class="d-flex justify-content-center">
    <div class="card w-100">
        <div class="card-body">
            <a href="/Students/Create" class="btn btn-primary">Crear estudiante</a>
            <div class="table-responsive mt-3">
                <table class="table table-striped" id="generalTable">
                    <thead>
                        <tr>
                            <th>DNI</th>
                            <th>Estudiante</th>
                            <th>F. Nacimiento</th>
                            <th>Edad</th>
                            <th>Escuela</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Los estudiantes se insertan vía JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script asp-append-version="true" src="~/js/students/index.js" type="module"></script>
