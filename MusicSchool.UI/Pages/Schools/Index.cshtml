@page
@model MusicSchool.UI.Pages.Schools.IndexModel
@{
	ViewData["Title"] = "Escuelas";
}

<h3 class="text-center">Lista de escuelas</h3>

<div class="text-center" id="error" style="color: red;"></div>

<div class="d-flex justify-content-center">
    <div class="card w-100">
        <div class="card-body">
            <a href="/Schools/Create" class="btn btn-primary">Crear escuela</a>
            <div class="table-responsive mt-3">
                <table class="table table-striped" id="generalTable">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Los estudiantes se insertan vía JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script asp-append-version="true" src="~/js/schools/index.js" type="module"></script>