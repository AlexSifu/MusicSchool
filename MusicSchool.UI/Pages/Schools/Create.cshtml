@page
@model MusicSchool.UI.Pages.Schools.CreateModel
@{
	ViewData["Title"] = "Escuelas";
}

<h3 class="text-center">Crear escuela</h3>

<div class="text-center" id="error" style="color: red;"></div>

<div class="d-flex justify-content-center">
    <div class="card w-100">
        <div class="card-body">
            <form id="createForm">
                <div class="mb-3">
                    <label class="form-label">Código</label>
                    <input class="form-control" type="text" id="code" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input class="form-control" type="text" id="name" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <textarea class="form-control" id="description"></textarea>
                </div>
                <button class="btn btn-success" type="submit">Crear</button>
                <a class="btn btn-secondary" href="/Students">Cancelar</a>
            </form>
        </div>
    </div>
</div>

<script asp-append-version="true" src="~/js/schools/create.js" type="module"></script>
